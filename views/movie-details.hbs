<h1>{{movie.title}}</h1>
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{movie.image}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{movie.title}}</h5>
        <p class="card-text"><small class="text-muted">{{movie.director}}</small></p>
        <p class="card-text">{{movie.description}}</p>
        <a href="/movies/{{this.id}}">{{movie.title}}</a>
      </div>
    </div>
  </div>
</div>

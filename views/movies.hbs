{{#each movies}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{this.image}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text"><small class="text-muted">{{this.director}}</small></p>
        <p class="card-text">{{this.description}}</p>
        <a href="/movies/id_{{this.id}}">{{this.title}}</a>
      </div>
    </div>
  </div>
</div>
{{/each }}
